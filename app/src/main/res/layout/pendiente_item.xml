<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/shape_cards"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_arrow_back"
            android:drawableTint="@color/white" />
        <TextView
            android:id="@+id/tvActivityName"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnAvanzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_arrow_forward"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvActivityDescription"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:lines="5"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:paddingLeft="15dp"
        android:text="TextView"
        android:textSize="17sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Ingreso: "
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:paddingLeft="15dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:drawableTint="@color/white" />
    </LinearLayout>



</LinearLayout>